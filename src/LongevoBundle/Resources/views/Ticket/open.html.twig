{% extends "LongevoBundle:Default:base.html.twig" %}

{% block title %}LongevoBundle:Ticket:open{% endblock %}

{% block styles %}
{% endblock %}

{% block body %}
    <div class="main-body">
        <h2>Solicitação de atendimento</h2>
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                {{ flashMessage|trans }}
            </div>
        {% endfor %}
            <form method="post" action="{{ path("ticket_open_save") }}">
            <div class="form-group">
                <label for="name">Nome</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Nome">
            </div>
            <div class="form-group">
                <label for="order_id">Número do pedido</label>
                <input type="text" class="form-control" id="order_id" name="order_id" placeholder="Número do pedido">
            </div>
            <div class="form-group">
                <label for="email">E-mail</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="E-mail">
            </div>
            <div class="form-group">
                <label for="title">Titulo</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Titulo">
            </div>
            <div class="form-group">
                <label for="observation">Observação</label><br />
                <textarea name="observation" id="observation" rows="7"></textarea>
            </div>
            <button type="submit" class="btn btn-default">Enviar solicitação de atendimento</button>
        </form>
    </div>
{% endblock %}
